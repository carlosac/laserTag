<tr>
  <td>
    <%= perfil.name %>
  </td>
  <td>
    <%= perfil.codigoPerfil %>
  </td>
  
    <td>
      
      <form class="form-inline" id="switch-one<%= index %>" action="/perfil/excluir/" method="POST">
        <input type="hidden" name="id" value="<%= perfil._id %>">

        <button type="button" id="alterarPerfil" class="btn btn-outline-primary"  data-toggle="modal" data-target="#modalEditarPerfil<%= index %>">
          Alterar
        </button>
        &nbsp;
        
        <div id="excluirDialog"></div>
        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal<%= index %>">
          <i class="mdi mdi-delete" ></i> Excluir
        </button>
        
        <!-- Modal -->
        <div class="modal fade" id="exampleModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Excluir Perfil?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Deseja realmente excluir o perfil <b> <%= perfil.name %>? </b>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-outline-primary" >Confirmar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>
</td>
</tr>

<div class="modal fade" id="modalEditarPerfil<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Atualizar Perfil</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/perfil/atualizar" method="POST">
          <input type="hidden"  value="<%= perfil._id %>" placeholder="Digite o nome do perfil" name="id">
          <div class="form-group">
            <label for="exampleInputEmail1">Nome do Perfil</label>
            <input type="text" class="form-control" value="<%= perfil.name %>" placeholder="Digite o nome do perfil" name="name">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Código do Perfil</label>
            <input type="text" class="form-control" value="<%= perfil.codigoPerfil %>" placeholder="Digite o código numérico do perfil" name="codigoPerfil">
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-outline-primary">Salvar</button>
      </form>
      </div>
    </div>
  </div>
</div>