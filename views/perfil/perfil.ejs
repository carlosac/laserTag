<div class="row ">
  <div class="col-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Perfil</h4>
        <div id='mensagens'>

      </div>
        <div class="table-responsive">
          <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código do perfil</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>

    <% perfis.forEach(function(perfil, index){ %>
      <%- include('cards', {perfil: perfil, index: index}); %>
        <% }); %>
  </tbody>
</table>

<h4>&nbsp;</h4>
<button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalCenter">
  + Novo perfil
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Cadastro de Perfil</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/perfil/register" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Nome do Perfil</label>
            <input type="text" class="form-control" placeholder="Digite o nome do perfil" name="name">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Código do Perfil</label>
            <input type="text" class="form-control" placeholder="Digite o código numérico do perfil" name="codigoPerfil">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-outline-primary">Salvar</button>
      </form>
      </div>
    </div>
  </div>
</div>


</div>
</div>



    

  </div>
</div>
</div>





<script>
 
  $('input[type=checkbox]').on('change', function () {
    $(this).closest("form").submit();
  });
  
</script>