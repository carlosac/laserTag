<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Arduino</h4>
                <div class="table-responsive">
                    <% if (arduinos.length > 0) { %>
                    <table class="table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>IP</th>
                <th>Porta</th>
                <th>Ação</th>
              </tr>
            </thead>
            <tbody>
          
              <% arduinos.forEach(function(arduino, index){ %>
                <%- include('cards', {arduino: arduino, index: index}); %>
                  <% }); %>
            </tbody>
          </table>
          <%  } %>
          <h4>&nbsp;</h4>
                <button type="button" class="btn btn-outline-success" data-toggle="modal"
                    data-target="#exampleModalCenter">
                    + Novo Arduino
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Cadastro de Perfil</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/arduino/incluir" method="POST">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nome do Arduino</label>
                                        <input type="text" class="form-control" placeholder="Digite o nome do Arduino"
                                            name="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Descricao</label>
                                        <input type="text" class="form-control" placeholder="Digite a descricao do Arduino"
                                            name="description">
                                    </div>
                                   

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary"
                                    data-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-outline-primary">Salvar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>